<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_post"
            >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/volunteerPreviewName"
                android:textColor="#021821"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_preview_type"
                android:layout_below="@+id/volunteerPreviewName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Location "
                android:textStyle="italic"
                android:textColor="#132b36"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volunteerPreviewLocation"
                android:layout_below="@+id/volunteerPreviewName"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="7dp"
                android:text="SUST"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#365c6d"
                />

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No: "
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/volunteerPreviewLocation"
                android:textColor="#021821"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volunteerPreviewPhoneNo"
                android:layout_below="@+id/volunteerPreviewLocation"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="7dp"
                android:text="01825......"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#365c6d"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>